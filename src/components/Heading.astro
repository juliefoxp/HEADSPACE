---
const { htmlheading, size = "h1", stylingclasses = "" } = Astro.props;

if (!htmlheading) {
  throw new Error("Heading-komponenten kræver en 'htmlheading' prop, fx 'h1', 'h2', 'h3', 'h4'.");
}

// Mobile-first + Desktop størrelser
const sizeClasses = {
  // DISPLAY (Hero)
  display: "text-[60px] lg:text-[100px] font-barlow",

  // HEADINGS
  h1: "text-[40px] lg:text-[64px] font-barlow",
  h2: "text-[32px] lg:text-[52px] font-barlow",
  h3: "text-[24px] lg:text-[36px] font-barlow",
  h4: "text-[20px] lg:text-[25px] font-barlow",

  // CTA
  "cta-20": "text-[20px] lg:text-[20px] font-barlow",
  "cta-25": "text-[25px] lg:text-[25px] font-barlow",
};

const tag = htmlheading;
---

<tag class:list={[sizeClasses[size], stylingclasses]}>
  <slot />
</tag>
