---
const { htmlheading, size = "h1", stylingclasses = "" } = Astro.props;

if (!htmlheading) {
  throw new Error("Heading-komponenten kr√¶ver en 'htmlheading' prop, fx 'h1', 'h2', 'h3', 'h4'.");
}

const sizeClasses = {
  // DISPLAY (Hero)
  display: "text-[60px] lg:text-[100px] font-barlow",

  // HEADINGS
  h1: "text-[40px] lg:text-[54px] font-barlow",
  h2: "text-[28px] lg:text-[36px] font-barlow",
  h3: "text-[20px] lg:text-[25px] font-barlow",
  h4: "text-[18px] lg:text-[18px] font-barlow",

  // CTA
  "cta": "text-[18px] lg:text-[18px] font-barlow",

};

const tag = htmlheading;
---

<tag class:list={[sizeClasses[size], stylingclasses]}>
  <slot />
</tag>
