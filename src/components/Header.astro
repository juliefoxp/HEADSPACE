---
import Logo from '../img/logo.png';
import '../layouts/MainLayout.astro'
---
<header class="bg-white border-b-[7px] border-secondary p-4">
  <div class="container mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-2">
      <img src={Logo.src} alt="Logo" class="h-10 w-auto" />
    </a>

    <!-- Desktop Menu -->
    <nav class="hidden md:flex items-center space-x-6">
      <a href="/om-os" class="text-cta hover:text-cta-hover">Om os</a>
      <a href="/frivillig" class="text-cta hover:text-cta-hover">Frivillig</a>

      <!-- Knapper -->
      <a href="/chat" class="ml-4 px-4 py-2 bg-cta text-white rounded hover:bg-cta-hover transition">
        Chat
      </a>
      <a href="/stot" class="ml-2 px-4 py-2 bg-cta text-white rounded hover:bg-cta-hover transition">
        Støt
      </a>
    </nav>

    <!-- Mobile Burger Button -->
    <button id="mobile-menu-button" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="hidden md:hidden flex flex-col space-y-4 mt-4 px-4">
    <a href="/om-os" class="text-cta hover:text-cta-hover">Om os</a>
    <a href="/frivillig" class="text-cta hover:text-cta-hover">Frivillig</a>
    <a href="/chat" class="px-4 py-2 bg-secondary text-white rounded hover:bg-primary transition">Chat</a>
    <a href="/stot" class="px-4 py-2 bg-cta text-white rounded hover:bg-cta-hover transition">Støt</a>
  </nav>
</header>

<!-- JS til burger-menu -->
<script type="module" client:load>
  const menuBtn = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
